{% extends "base.html.twig" %}

{% block body %}
	<div class="container-fluid container-sm">
		<div class="col-sm-6 mx-auto mt-4">
			<h1 class="display-6 display-5-md">{{ form_title }}</h1>
			{{ form_start(form) }}
			{# pas de form_label ici puisque déjà déclaré dans le formType #}
			{{ form_widget(form.name) }}
			{{ form_errors(form.name) }}
			<button type="submit" class="mt-1 btn btn-success">Valider</button>
			<a href="{{ path("app_categories") }}" class="mt-1 btn btn-warning" alt="bouton d'annulation">Annuler</a>
			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
