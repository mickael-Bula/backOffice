

{% extends 'base.html.twig' %}

{% block title %}Back Office{% endblock %}

{% block body %}

    <section class="py-5 mt-4">
        <div class="container">
            {% if products|length > 0 %}
            <table class="table table-sm table-hover d-none d-sm-table">
                <thead>
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col" class="text-center">nom</th>
                    <th scope="col" class="text-center">reference</th>
                    <th scope="col" class="text-center">prix</th>
                    <th scope="col" class="text-center">en stock</th>
                </tr>
                </thead>
                {% for product in products %}
                    <tr>
                        <td class="text-center">{{ product.id }}</td>
                        <td class="text-center">{{ product.name }}</td>
                        <td class="text-center">{{ product.reference }}</td>
                        <td class="text-center">{{ product.price }}</td>
                        <td class="text-center">{{ product.isAvailable }}</td>
                        <a href="{{ path('app_product', {'id': product.id }) }}"><button class="btn btn-primary">éditer</button></a>
                    </tr>
                {% endfor %}

                {% else %}
                <p>Il n'y a aucun produit référencé.</p>
                {% endif %}

            </table>
        </div>
    </section>

{% endblock %}
